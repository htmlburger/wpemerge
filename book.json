{
    "root": "./docs",
    "plugins": [ "anchorjs", "ga", "sharing", "theme-api" ],
    "pluginsConfig": {
        "anchorjs": {
            "selector": "h2,h3,h4,h5",
            "icon": "#",
            "placement": "left",
            "truncate": 64
        },
        "ga": {
            "token": "UA-115991844-1"
        },
        "theme-api": {
            "theme": "dark",
            "split": true,
            "languages": [
                {
                    "lang": "php",
                    "name": "PHP",
                    "default": true
                }
            ]
        }
    }
}
